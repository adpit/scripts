#!/bin/sh
rsync -e ssh -Pavz --del --delete-excluded --force --exclude '/.bzr' --exclude '/.git' --exclude '*~' \
  ~/proj/mwn/masterkey mwnwhmcs@xenon:
rsync -e ssh -Pavz \
  ~/repos/php-sh_functions/sh_functions.inc.php \
  ~/repos/php-sh_functions/sh_translation.inc.php \
  ~/repos/php-sh_functions/sh_utils.inc.php \
  ~/repos/php-sh_functions/sh_grid.inc.php \
  ~/repos/php-sh_functions/sh_activerecord.inc.php \
  ~/repos/spanel/lang \
  mwnwhmcs@xenon:

ssh mwnwhmcs@xenon masterkey/bin/masterkey-install \
  --site mwn \
  --branch prod \
  --source /home/mwnwhmcs/masterkey \
  --target /s/masterkey.masterweb.net/www/ \
  --sh-functions-dir /home/mwnwhmcs \
  install \
  $*

ssh root@xenon \
'for p in /s/masterkey.masterweb.net/www/admin/mobile/sendsms; \
 do chown root.mwnwhmcs "$p"; chmod 4755 "$p"; done; \
 rsync -Pav --del \
   --include "+ admin" \
   --include "+ admin/mobile" \
   --include "+ admin/mobile/**" \
   --include "+ includes" \
   --include "+ includes/mk-functions.php" \
   --include "+ includes/sh_functions.inc.php" \
   --include "+ includes/sh_translation.inc.php" \
   --include "- *" \
   /s/masterkey.masterweb.net/www/ /usr/local/masterkey/;
 rsync -av /s/masterkey.masterweb.net/etc/configuration.php /usr/local/masterkey/; # 2009-04-01 - 2 minggu lalu demi security gw memindahkan DOCROOT/configuration.php yg berisi password internet banking dll jadi symlink ke ../etc/.

'

